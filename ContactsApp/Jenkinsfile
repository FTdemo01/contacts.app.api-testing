pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your version control system
                git 'https://github.com/FTdemo01/contacts.app.api-testing.git'
            }
        }
        
        stage('Build') {
            steps {
                // Build the .NET solution
                sh 'msbuild /t:Build /p:Configuration=Release ContactsApp.sln'
            }
        }
    }
    
    post {
        success {
            // Actions to perform after successful pipeline execution
            echo 'Pipeline executed successfully!'
        }
        failure {
            // Actions to perform after failed pipeline execution
            echo 'Pipeline execution failed!'
        }
        always {
            // Actions to perform regardless of pipeline result
            // For example, cleanup steps
            cleanWs()
        }
    }
}