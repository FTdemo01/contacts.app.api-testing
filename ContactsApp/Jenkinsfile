pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your source code repository
                git 'https://github.com/FTdemo01/contacts.app.api-testing.git'
            }
        }
        
        stage('Build') {
            steps {
                // Build the .NET project
                script {
                    dir('ContactsApp') {
            sh 'dotnet build --configuration Release'
                }
            }
        }
        
        stage('Test') {
            steps {
                // Run tests
                script {
                    sh 'dotnet test --configuration Release'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deployment completed successfully'
            }
        }
    }
    
    post {
        success {
            // Perform actions when the pipeline succeeds
            echo 'Pipeline succeeded!'
        }
        failure {
            // Perform actions when the pipeline fails
            echo 'Pipeline failed!'
        }
        always {
            // Perform actions that should always run (clean-up, notifications, etc.)
            echo 'Pipeline completed!'
        }
    }
}